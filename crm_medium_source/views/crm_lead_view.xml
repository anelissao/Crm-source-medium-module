<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crm_lead_form_inherit_medium_source" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.medium.source</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='lead']" position="inside">
            <group string="Source / Medium">
                <field name="source_gravity"/>
                <field name="medium_gravity"/>
            </group>
        </xpath>
        </field>
    </record>
</odoo>